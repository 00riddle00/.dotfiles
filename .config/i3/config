set $ws7 " 7:  "
set $ws8 " 8: ♫ "
set $ws9 " 9:  "
set $ws10 " 10:  "

# moved this line after assigning workspaces so as 
# not to break ws1 icon
# $run i3-msg 'workspace $ws1; $run $term -name t2'
$run i3-vimnotes

# switch to workspace
