#!/usr/bin/env sh

file="$HOME/.xinitrc"
cur_wm=$(sed  -E -n 's/exec (.*)/\1/p' $file)

case $cur_wm in
  openbox-session)
      new_wm="i3"
      break
      ;;
  i3)
      new_wm="openbox-session"
      break
      ;;
  *)
      echo "Failed to edit .xinitrc! "
      ;;
esac

sed  -Ei "s/exec (.*)/exec $new_wm/" $file
echo "$cur_wm -> $new_wm"


