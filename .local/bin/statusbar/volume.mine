#!/usr/bin/env sh

volstat="$(amixer get Master)"

volume=$(echo "$volstat" | grep -o "\[[0-9]\+%\]" | sed 's/[^0-9]*//g')
vol=$(echo $volume | awk '{print $1}');

echo "$volstat" | grep "\[off\]" >/dev/null && printf "婢 \\n" && exit

if [[ $vol -eq 0 ]]; then
    icon="";
elif [[ $vol -le 30 ]]; then
    icon="";
elif [[ $vol -le 60 ]]; then
    icon="墳";
else
    icon="";
fi;

printf "%s %s%%\\n" "$icon" "$vol"
