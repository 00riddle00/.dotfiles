#!/usr/bin/env sh

brave_sink_input_index=$(pactl list sink-inputs | tr '\n' '\r' | perl -pe 's/.*? *Sink Input #([0-9]+).+?application.name = "([^\r]+)"\r.+?(?=Sink Input #|$)/\2:\1\r/g' | tr '\r' '\n' | grep -i brave | awk -F':' '{print $2}')
pactl set-sink-input-volume ${brave_sink_input_index} ${1}
