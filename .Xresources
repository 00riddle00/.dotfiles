
! -- Urxvt settings -- !
URxvt.buffered: true
URxvt.cursorColor: #5E468C 
URxvt.cursorUnderline: false
URxvt.cursorBlink: true
URxvt.geometry: 110x50
URxvt.scrollBar: false
URxvt.scrollBar_right: false
!URxvt.borderLess: true
!URxvt.borderWidth: 0
!URxvt.internalBorder: 0
!URxvt.externalBorder: 0
!URxvt.transparent: 0
URxvt.shading: 0
URxvt.depth: 32
URxvt.letterSpace: 0
URxvt.lineSpace: 1
URxvt.iconFile: /home/riddle/Dropbox/candy/icons/terminal/term_green_2.svg
! Disable ISO 14755 unicode input so we can use Ctrl+Shift bindings
URxvt.iso14755: false
URxvt.iso14755_52: false

! -- Fonts -- !
! Xft Font Configuration 
Xft.dpi: 96
Xft.antialias: true 
Xft.rgba: rgb
Xft.hinting: true 
Xft.hintstyle: hinstlight 

! Current Xft Font 
URxvt.font: xft:Source Code Pro:size=9, \
            xft:Symbola:size=9, \
            xft:Noto Color Emoji:size=9, \
            xft:Inconsolata Nerd Font Mono:size=9, \
            xft:DejaVuSansMono Nerd Font:size=9, \
            xft:DroidSansMono Nerd Font:size=9, \
            xft:FiraCode Nerd Font:size=9, \
            xft:RobotoMono Nerd Font:size=9

! -- Colors -- !
#include ".config/colors/dark"

! --  Extensions -- !
URxvt.perl-ext-common:     default,matcher,resize-font,keyboard-select
!copy and paste
URxvt.keysym.M-c:             eval:selection_to_clipboard
URxvt.keysym.M-v:             eval:paste_clipboard
!keyboard-select
!  activate selecting text
!  then use vim commands ('v' for visual mode)
!  after pressing Enter, the selection is saved in clipboard
URxvt.keysym.M-i:          perl:keyboard-select:activate
! url open with matcher
URxvt.url-launcher:                 /usr/bin/brave
! ^----(or use /usr/bin/xdg-open)
URxvt.keysym.M-Delete:              perl:matcher:list
URxvt.matcher.button:               1
URxvt.matcher.rend.0:               Uline Bold fg4
URxvt.colorUL:                      #4682B4
!resize-font
URxvt.resize-font.step:     2
URxvt.keysym.C-minus:       resize-font:smaller
URxvt.keysym.C-plus:        resize-font:bigger
URxvt.keysym.C-equal:       resize-font:reset

! -- Xterm settings -- !
xterm*termName: xterm-256color
xterm*locale: true
xterm*cursorColor: #1792d0
xterm*toolBar: false
xterm*scrollBar: false
xterm*rightScrollBar: false
xterm*faceName: anonymous pro:bold:size=8
xterm*allowBoldFonts: true
xterm*dynamiccolors: true
xterm*utf8:               2
xterm*geometry:           100x50
xterm*visualBell:         off
xterm*highlightSelection: true
xterm*scrollTtyOutput: true

xterm*color0: #000000
xterm*color1: #CC0000
xterm*color2: #4E9A06
xterm*color3: #C4A000
xterm*color4: #3465A4
xterm*color5: #75507B
xterm*color6: #06989A
xterm*color7: #D3D7CF
xterm*color8: #555753
xterm*color9: #EF2929
xterm*color10: #8AE234
xterm*color11: #FCE94F
xterm*color12: #729FCF
xterm*color13: #AD7FA8
xterm*color14: #34E2E2
xterm*color15: #EEEEEC

! -- Xscreensaver settings -- !
xscreensaver.mode:         blank
xscreensaver.timeout:      0:10:00
xscreensaver.fade:         True
xscreensaver.unfade:       False
xscreensaver.fadeSeconds:  0:00:03
xscreensaver.splash:       False

!font settings
xscreensaver-auth.?.Dialog.headingFont:  -misc-dejavu sans-bold-r-*-*-18-*-*-*-*-*-*-*
xscreensaver-auth.?.Dialog.bodyFont:     -misc-dejavu sans-medium-r-*-*-18-*-*-*-*-*-*-*
xscreensaver-auth.?.Dialog.labelFont:    -misc-dejavu sans-medium-r-*-*-18-*-*-*-*-*-*-*
xscreensaver-auth.?.Dialog.unameFont:    -misc-dejavu sans-medium-r-*-*-18-*-*-*-*-*-*-*
xscreensaver-auth.?.Dialog.buttonFont:   -misc-dejavu sans-bold-r-*-*-18-*-*-*-*-*-*-*
xscreensaver-auth.?.Dialog.dateFont:     -misc-dejavu sans-medium-r-*-*-16-*-*-*-*-*-*-*
xscreensaver-auth.?.passwd.passwdFont:   -misc-dejavu sans-bold-r-*-*-18-*-*-*-*-*-*-*

!general dialog box (affects main hostname, username, password text)
xscreensaver-auth.?.Dialog.foreground:         #1792d0
xscreensaver-auth.?.Dialog.background:         #202020
xscreensaver-auth.?.Dialog.topShadowColor:     #000000
xscreensaver-auth.?.Dialog.bottomShadowColor:  #000000
xscreensaver-auth.?.Dialog.Button.foreground:  #1792d0
xscreensaver-auth.?.Dialog.Button.background:  #000000

!username/password input box and date text colour
xscreensaver-auth.?.Dialog.text.foreground:      #7262b3
xscreensaver-auth.?.Dialog.text.background:      #002626
xscreensaver-auth.?.Dialog.internalBorderWidth:  45
xscreensaver-auth.?.Dialog.borderWidth:          0
xscreensaver-auth.?.Dialog.shadowThickness:      4

!timeout bar (background is actually determined by Dialog.text.background)
xscreensaver-auth.?.passwd.thermometer.foreground:  #1792d0 
xscreensaver-auth.?.passwd.thermometer.background:  #7262b3
xscreensaver-auth.?.passwd.thermometer.width:       6

!datestamp format--see the strftime(3) manual page for details
xscreensaver-auth.?.dateFormat:  %Y, %b %d, %a, %R

