
class ContactForm(forms.Form):
    phone = forms.CharField(max_length=30, label="Let's talk")

    def clean_phone(self):
        phone = self.cleaned_data['phone']
        phone = phone.replace(' ', '')
        try:
            int(phone)
        except(ValueError, TypeError):
            raise forms.ValidationError("Please enter a valid phone number")
        if len(phone) < 9:
            raise forms.ValidationError("The number is too short!")
        elif len(phone) > 15:
            raise forms.ValidationError("The number is too long!")
        return phone
