<script type="text/javascript">


var counter = 0;






$('#dino').on('click', function () {
        console.log('yes')
});

var e = 0;

var change_legs = function () {
        if ( e % 3 == 0 ) {
                $('#dino').css("background-image", "url('/static/img/2.png')")
        } else if ( e % 2 == 0 ) {
                $('#dino').css("background-image", "url('/static/img/1.png')")
        } else {
                $('#dino').css("background-image", "url('/static/img/0.png')")
        }
        return e = e + 1
};



                       


$(document).keydown(function(e) {      
        e.preventDefault();

                switch(e.which) {
                        case 37:
                        console.log('left');
                         $('#dino').css({marginLeft: '-=15px'});
                         $('#dino').css("background-image", "url('/static/img/3.png')")
                         change_legs()
                        break;

                        case 38: console.log('up');
                         $('#dino').css({marginTop: '-=15px'});
                        change_legs()
                         $('#dino').css("background-image", "url('/static/img/4.png')")
                        $('.c1').hide()
                        $('#number').html('1')
                        break;

                        case 39: console.log('right');
                         $('#dino').css({marginLeft: '+=15px'});
                         change_legs()
                         $('#dino').css("background-image", "url('/static/img/2.png')");
                        break;

                        case 40: console.log('down');
                         $('#dino').css({marginTop: '+=15px'});
                        change_legs()

                       break;

                        default: return;
                }
});



</script>



