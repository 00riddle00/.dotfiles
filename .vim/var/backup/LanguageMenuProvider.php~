<?php

namespace OsosTVS\Providers\backend;

use Illuminate\Support\ServiceProvider;
use OsosTVS\Models\Language;

class LanguageMenuProvider extends ServiceProvider
{
    public static $views = [
        'backend.slider._form',
        'backend.maps._form',
        'backend.about-us._form',
        'backend.contacts._form',
        'backend.products.layouts.partials._form'
    ];

    public static $viewsFrontend = [
        'frontend.index'
    ];

    /**
     * Bootstrap the application services.
     *
     * @return void
     */
    public function boot()
    {

        /*        $languages = Language::active()->get();  */

        if(isset($languages)) {
            for ($i = 0; $i < count(static::$views); $i++) {
                view()->composer(static::$views[$i], function($view) use ($languages) {
                    $view->with('languages', $languages);
                });
            }
        }

        if(isset($languages)) {
            for ($i = 0; $i < count(static::$viewsFrontend); $i++) {
                view()->composer(static::$viewsFrontend[$i], function($view) use ($languages) {
                    $view->with('providerLanguages', $languages);
                });
            }
        }
    }

    /**
     * Register the application services.
     *
     * @return void
     */
    public function register()
    {
        //
    }
}
